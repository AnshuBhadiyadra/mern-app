# Environment Variables — Backend
# Copy this file to .env and fill in the values

# MongoDB Atlas connection string
MONGODB_URI=mongodb+srv://<username>:<password>@cluster0.xxxxx.mongodb.net/felicity-events

# JWT secret — use a long random string (e.g., run: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
JWT_SECRET=your_jwt_secret_here

# Server port (Vercel sets this automatically, only needed for local dev)
PORT=5001

# Frontend URL for CORS (set this to your deployed frontend URL)
FRONTEND_URL=http://localhost:5173

# Gmail credentials for sending emails (optional — app works without these)
GMAIL_USER=
GMAIL_PASS=

# Google reCAPTCHA secret key (optional — skipped in development)
RECAPTCHA_SECRET_KEY=

# Admin account defaults (used by createAdmin script)
ADMIN_EMAIL=admin@felicity.com
ADMIN_PASSWORD=admin123456
